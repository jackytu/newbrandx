{% load currency_filters %}
{% load category_tags %}
{% load i18n %}
{% load staticfiles %}

<div class="navbar primary navbar-static-top navbar-inverse">
    <div class="navbar-inner">
        <div class="container-fluid">
            <!--a class="btn btn-navbar" data-toggle="collapse" data-target=".primary-collapse">
                <i class="icon-reorder"></i>
            </a-->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">B
        <img src="{% static "demo/img/svg/logo.jpg" %}" class="logo" alt="{{ shop_name }} - {{ shop_tagline }}" width="140" height="40" />
      </a>
    </div>

            <!--div class="nav-collapse primary-collapse"-->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav">
                    <li><a tabindex="-1" href="{% url 'catalogue:index' %}">{% trans "All" %}</a></li>
                    
                    {% category_tree depth=2 as tree_categories %}

                    {% if tree_categories %}
                        <li class="divider"></li>
                        {% for tree_category,info in tree_categories %}
                            {% if info.has_children %}
                                <li class="dropdown">
                                    <a tabindex="-1" href="{{ tree_category.get_absolute_url }}" data-toggle="dropdown" class="dropdown-toggle">
                                        {{ tree_category.name }} 
                                        <i class="icon-arrow-down"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a tabindex="-1" href="{{ tree_category.get_absolute_url }}">
                                                {% trans "All" %} {{ tree_category.name }}
                                                <i class="icon-arrow-right"></i>
                                            </a>
                                        </li>
                                        <li class="divider"></li>
                            {% else %}
                                <li><a tabindex="-1" href="{{ tree_category.get_absolute_url }}">{{ tree_category.name }}</a></li>
                            {% endif %}
                            {% for close in info.num_to_close %}
                                </ul></li>
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    <li><a href="{% url 'offer:list' %}">{% trans "Offers" %}</a></li>
                </ul>


            </div><!-- /.nav-collapse -->
                <!--ul class="breadcrumb pull-right nav-accounts"-->
         <ul class="nav pull-right">

        {% if user.is_authenticated %}
            <li>
                <a href="{% url "customer:summary" %}">{% trans "Account" %}</a>
                <!--span class="divider">|</span-->
            </li>
            <li>
                <a href="{% url "customer:notifications-inbox" %}">
                    {% trans "Notifications" %}
                    {% if num_unread_notifications > 0 %}
                        <span class="label label-important">{{ num_unread_notifications }}</span>
                    {% endif %}</a>
                    <!--span class="divider">|</span-->
            </li>
            {% if user.is_staff or perms.partner.dashboard_access %}
            <li class="hidden-phone">
                <a href="{% url "dashboard:index" %}">{% trans "Dashboard" %}</a>
                <!--span class="divider">|</span-->
            </li>
            {% endif %}
            <li><a href="{% url "customer:logout" %}">{% trans "Logout" %}</a></li>
        {% else %}
            <li><a href="{% url "customer:login" %}">{% trans "Login or register" %}</a></li>
        {% endif %}
    </ul>
        </div>
    </div><!-- /navbar-inner -->
</div><!-- /navbar -->